<script id="categoryGridItem" type="text/x-simpleTemplate-template">

    <h1><%this.Name%></h1>

    <%for(var index in this.products) {%>

    <div class="item-grid-target">
        <a href="#!product/<%this.products[index]slug%>">
            <img alt="<%this.products[index].Name%>" src="img/<%this.products[index].image" class="product-grid-photo">
            <figcaption class="item-grid-photo-caption"><%this.products[index].Name%></figcaption>
        </a>
    </div>

    <%}%>

</script>