
<script id="categoryListItem" type="text/x-simpleTemplate-template">

    <%for(var index in this.categories) {%>

    <div class="categories-grid-item">
        <a class="categories-grid-parent-title" href="#!category/<%this.categories[index].Slug%>"><%this.categories[index].Name%></a>

        <div class="categories-grid-item-children">

            <%for(var child in this.categories[index].Children) {%>

            <a class="categories-grid-child-title" href="#!category/<%this.categories[index].Children[child].Slug%>"><%this.categories[index].Children[child].Name%></a>

            <%}%>
        </div>
    </div>

    <%}%>

</script>